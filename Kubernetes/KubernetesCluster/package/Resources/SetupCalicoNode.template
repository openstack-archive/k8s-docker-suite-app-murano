FormatVersion: 2.0.0
Version: 1.0.0
Name: Setup Calico on Node

Parameters:
  ip: $ip

Body: |
  return setupCalico('{0}'.format(args.ip)).stdout

Scripts:
  setupCalico:
    Type: Application
    Version: 1.0.0
    EntryPoint: setupCalicoNode.sh
    Files:
      - systemd/calico-node.service
      - environ/network-environment
      - 10-calico.conf
    Options:
      captureStdout: true
      captureStderr: true